{
  "name": "streamtree",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "db:migrate": "turbo run db:migrate --filter=@streamtree/api",
    "db:generate": "turbo run db:generate --filter=@streamtree/api",
    "db:push": "turbo run db:push --filter=@streamtree/api",
    "db:studio": "turbo run db:studio --filter=@streamtree/api"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.0.0"
}
